extends ../node_modules/jade-bootstrap/_bootstrap
block body
    h1= title
    form(method="post", action="/users/login/process" class = "form-inline")
        div.form-group
            label.sr-only(for="login")="Login"
            input.form-control(type="text", name = "login", id="login" placeholder="Login")
        div.form-group
            label.sr-only(for="pass")="Login"
            input.form-control(type="password", name = "pass", id="pass" placeholder="Password")
        button.btn.btn-default(type="submit")="Sign in"